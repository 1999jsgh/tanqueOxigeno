<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FechaVenta">

    <TextView
        android:text="Fecha Antes"
        android:layout_width="match_parent"
        android:layout_height="30dp">
    </TextView>
    <EditText
        android:id="@+id/fechaAntes"
        android:text="2020-04-01"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </EditText>
    <TextView
        android:text="Fecha Despues"
        android:layout_width="match_parent"
        android:layout_height="30dp">
    </TextView>
    <EditText
        android:id="@+id/fechaDespues"
        android:text="2020-04-01"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="288dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewVenta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@+id/button"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp" />

    </LinearLayout>
    <Button
        android:id="@+id/btnConsultaVenta"
        android:text="Consultar"
        android:layout_width="match_parent"
        android:layout_height="60dp">

    </Button>


</LinearLayout>