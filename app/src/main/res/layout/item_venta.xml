<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="venta"
        android:layout_width="match_parent"
        android:layout_height="38dp">
    </TextView>
    <TextView
        android:id="@+id/venta_id"
        android:layout_width="match_parent"
        android:layout_height="38dp">
    </TextView>
    <TextView
        android:text="Botella"
        android:layout_width="match_parent"
        android:layout_height="38dp">

    </TextView>
    <TextView
        android:id="@+id/botella_id"
        android:layout_width="match_parent"
        android:layout_height="38dp">
    </TextView>
    <TextView
        android:text="Monto"
        android:layout_width="match_parent"
        android:layout_height="38dp">

    </TextView>
    <TextView
        android:id="@+id/monto"
        android:layout_width="match_parent"
        android:layout_height="38dp">
    </TextView>

    <TextView
        android:text="Fecha"
        android:layout_width="match_parent"
        android:layout_height="38dp">

    </TextView>
    <TextView
        android:id="@+id/fecha"
        android:layout_width="match_parent"
        android:layout_height="38dp">

    </TextView>
</LinearLayout>