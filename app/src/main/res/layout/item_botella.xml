<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">


        <ImageView
            android:layout_width="96dp"
            android:layout_height="100dp">

        </ImageView>

        <LinearLayout
            android:layout_width="96dp"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="96dp"
                android:layout_height="25dp"
                android:text="Botella id">

            </TextView>

            <TextView
                android:layout_width="96dp"
                android:layout_height="25dp"
                android:text="Codigo">

            </TextView>

            <TextView
                android:layout_width="96dp"
                android:layout_height="25dp"
                android:text="Valor Manometro">

            </TextView>

            <TextView
                android:layout_width="96dp"
                android:layout_height="25dp"
                android:text="Valor Recarga">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/botella_id"
                android:layout_width="match_parent"
                android:layout_height="25dp">

            </TextView>

            <TextView
                android:id="@+id/codigo"
                android:layout_width="match_parent"
                android:layout_height="25dp">

            </TextView>

            <TextView
                android:id="@+id/valorManometro"
                android:layout_width="match_parent"
                android:layout_height="25dp">

            </TextView>

            <TextView
                android:id="@+id/valorRecarga"
                android:layout_width="match_parent"
                android:layout_height="25dp">

            </TextView>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>