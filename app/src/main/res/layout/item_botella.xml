<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="96dp"
            android:layout_height="match_parent">

        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="96dp"
                android:layout_height="37.5dp"
                android:text="Botella id">

            </TextView>

            <TextView
                android:layout_width="96dp"
                android:layout_height="37.5dp"
                android:text="Codigo">

            </TextView>

            <TextView
                android:layout_width="96dp"
                android:layout_height="37.5dp"
                android:text="Valor Manometro">

            </TextView>

            <TextView
                android:layout_width="96dp"
                android:layout_height="37.5dp"
                android:text="Valor Recarga">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/botella_id"
                android:layout_width="match_parent"
                android:layout_height="37.5dp"
                tools:text="idbotella">

            </TextView>

            <TextView
                android:id="@+id/codigo"
                android:layout_width="match_parent"
                android:layout_height="37.5dp"
                android:text="codigo">

            </TextView>

            <TextView
                android:id="@+id/valorManometro"
                android:layout_width="match_parent"
                android:layout_height="37.5dp"
                android:text="manometro">

            </TextView>

            <TextView
                android:id="@+id/valorRecarga"
                android:layout_width="match_parent"
                android:layout_height="37.5dp"
                android:text="recarga">

            </TextView>

        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/purple_500"/>

</LinearLayout>